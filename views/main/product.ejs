<% layout('layout') %>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="<%= product.image %>" alt="" >
        </div>
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            <h3><%= product.name %></h3>
            <h1>$<%= product.price %></h1>

            <form action="" method="post">
                <div class="btn-group" role="group" aria-label="...">
                    <input type="hidden" name="quantity" value="1" id="quantity">
                    <button type="button" id="minus" class="btn btn-default">-</button>
                    <button type="button" id="total" class="btn btn-default">1</button>
                    <button type="button" id="plus" class="btn btn-default">+</button>
                </div>

                <div class="form-group">
                        <input type="hidden" name="product_id" value="<%= product._id %>" id="quantity">
                        <input type="hidden" name="priceHidden" value="<%= product.price %>" id="priceHidden">

                        <input type="text" name="item" class="form-control" value = "<%= product.name %>">
                        <input type="text" name="priceValue" id="priceValue" class="form-control"   value="<%= product.price %>" >
                </div>
                        <% if(user) { %>
                            <button type="submit" class="btn btn-primary btn-lg"> Add to cart</button>
                        
                        <% } else { %>
                            <a href="/signup" class="btn btn-warning btn-lg">Signup to begin buying!</a>

                        <% } %>
              
            </form>
        </div>
    </div>
</div>